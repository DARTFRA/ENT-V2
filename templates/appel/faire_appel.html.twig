{% extends 'base.html.twig' %}

{% block title %}Faire l'appel{% endblock %}

{% block body %}
    <h1 class="mb-4">Faire l'appel pour le cours : {{ cours.matiere.nom }}</h1>
    <p class="lead">Classe : {{ cours.classe.nom }}</p>
    <p>Jour : {{ cours.jourSemaine }} à {{ cours.heure|date('H:i') }}</p>

    <form method="post">
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th scope="col">Élève</th>
                    <th scope="col">Présent</th>
                </tr>
            </thead>
            <tbody>
                {% for eleve in eleves %}
                    <tr>
                        <td>{{ eleve.username }}</td>
                        <td>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="presence_{{ eleve.id }}" name="presence_{{ eleve.id }}" {% if presences[eleve.id] %}checked{% endif %}>
                                <label class="form-check-label" for="presence_{{ eleve.id }}">
                                    Présent
                                </label>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Enregistrer l'appel</button>
    </form>

{% endblock %}
