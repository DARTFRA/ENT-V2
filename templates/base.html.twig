<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}ENT Collège sacré Coeur{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Meta SEO -->
    <meta name="description" content="Le Collège Sacré Cœur est un établissement d'enseignement qui offre un cadre d'apprentissage d'excellence, favorisant l'épanouissement académique et personnel des élèves.">
    <meta name="keywords" content="Collège, Sacré Cœur, éducation, enseignement, excellence, élèves">
    <meta name="robots" content="index, follow">
    <meta name="author" content="Yoann Duzelier">
    <meta name="copyright" content="Collège Sacré Cœur, 2024">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:title" content="Collège Sacré Cœur - Un établissement d'excellence">
    <meta property="og:description" content="Découvrez le Collège Sacré Cœur, un établissement d'enseignement réputé pour l'excellence académique et l'épanouissement des élèves.">
    <meta property="og:image" content="https://college-sacre-coeur.fr/assets/imgs/logo.png">
    <meta property="og:url" content="https://college-sacre-coeur.fr">
    <meta property="og:site_name" content="Collège Sacré Cœur">

    <!-- Favicon -->
    <link rel="icon" href="{{ asset('favicon.ico') }}" sizes="any">
    <link rel="icon" href="{{ asset('favicon.png') }}" type="image/png"> <!-- Pour PNG -->
    <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}"> <!-- Pour les appareils Apple -->

    <link rel="stylesheet" href="{{ asset('css/navbar.css')}}">
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('home') }}">ENT - Collège sacré Coeur</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                {% if username is defined %}
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'home' ? 'active' : '' }}" href="{{ path('home') }}">
                            <i class="fas fa-home"></i> Accueil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'faire_appel' ? 'active' : '' }}" href="appel/4">
                            <i class="fas fa-cogs"></i> Appel
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'projects' ? 'active' : '' }}" href="#">
                            <i class="fas fa-project-diagram"></i> Projets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.attributes.get('_route') == 'contact' ? 'active' : '' }}" href="#">
                            <i class="fas fa-address-book"></i> Contact
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn nav-link logout-btn" href="{{ path('logout') }}">
                            <i class="fas fa-sign-out-alt"></i> Se déconnecter
                        </a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="btn nav-link login-btn" href="{{ path('connect_discord') }}">
                            <i class="fas fa-sign-in-alt"></i> Se connecter
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div class="container mb-4">
    {% block body %}{% endblock %}
</div>

{% block javascripts %}
    <script src="{{ asset('js/navbar.js') }}"></script>
    <script src="{{ asset('js/app.js') }}"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
{% endblock %}
</body>
</html>
